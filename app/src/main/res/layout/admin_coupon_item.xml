<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/coupon_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/offer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coupon_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Use Coupon Code FF333R to get Rs100 Off on orders above Rs200."
        android:textColor="@color/dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coupon_image"
        app:layout_constraintTop_toTopOf="@+id/coupon_image" />

    <ImageView
        android:id="@+id/edit_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:padding="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coupon_desc" />

    <ImageView
        android:id="@+id/delete_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trash"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:foregroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/edit_coupon"
        app:layout_constraintStart_toStartOf="@+id/edit_coupon"
        app:layout_constraintTop_toBottomOf="@+id/edit_coupon" />

</androidx.constraintlayout.widget.ConstraintLayout>